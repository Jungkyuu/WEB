<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Add New LEGO Set</title>
    <link rel="stylesheet" href="/css/main.css" />
  </head>
  <body>
    <%- include('partials/navbar', {page: '/lego/addSet' }) %>

    <main class="container">
      <h1 class="heading">Add New Set</h1>
      <form action="/addSet" method="POST" class="form">
        <div class="form-group">
          <label for="name">Name:</label>
          <input
            type="text"
            name="name"
            id="name"
            required
            placeholder="Enter set name"
          />
        </div>
        <div class="form-group">
          <label for="year">Year:</label>
          <input
            type="number"
            name="year"
            id="year"
            required
            placeholder="Enter year of release"
          />
        </div>
        <div class="form-group">
          <label for="num_parts">Number of Parts:</label>
          <input
            type="number"
            name="num_parts"
            id="num_parts"
            required
            placeholder="Enter number of parts"
          />
        </div>
        <div class="form-group">
          <label for="img_url">Image URL:</label>
          <input
            type="url"
            name="img_url"
            id="img_url"
            required
            placeholder="Enter image URL"
          />
        </div>
        <div class="form-group">
          <label for="theme_id">Theme:</label>
          <select name="theme_id" id="theme_id" required>
            <% themes.forEach(theme => { %>
            <option value="<%= theme.id %>"><%= theme.name %></option>
            <% }) %>
          </select>
        </div>
        <div class="form-group">
          <label for="set_num">Set Number:</label>
          <input
            type="text"
            name="set_num"
            id="set_num"
            required
            placeholder="Enter set number"
          />
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </main>
  </body>
</html>
