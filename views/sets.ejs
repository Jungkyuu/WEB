<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="/css/main.css" rel="stylesheet" />
    <title>Collection</title>
    <style>
      table {
        width: 100%;
        border-collapse: collapse;
      }
      th,
      td {
        border: 1px solid #ddd;
        padding: 8px;
        text-align: center;
      }
      th {
        background-color: #f2f2f2;
        color: #333;
      }
      td img {
        display: block;
        margin: 0 auto;
      }
    </style>
  </head>
  <body class="bg-gray-100 text-gray-900">
    <%- include('partials/navbar', { page: '/lego/sets' }) %>
    <main class="container mx-auto p-4">
      <section class="hero bg-blue-100 p-8 rounded-lg text-center">
        <div class="hero-content">
          <div>
            <h1 class="text-4xl mb-4">Collection</h1>
            <p class="mb-4">Explore the Lego Collection</p>
            <div class="mt-4 space-x-2">
              <a href="/lego/sets?theme=Technic" class="btn btn-primary"
                >Technic</a
              >
              <a href="/lego/sets?theme=Classic Town" class="btn btn-primary"
                >Classic Town</a
              >
              <a href="/lego/sets?theme=Lion Knights" class="btn btn-primary"
                >Lion Knights</a
              >
            </div>
          </div>
        </div>
      </section>
      <section class="mt-8">
        <table class="table-auto w-full">
          <thead>
            <tr>
              <th>Image</th>
              <th>Name</th>
              <th>Theme</th>
              <th>Year</th>
              <th>Parts</th>
              <th>Details</th>
            </tr>
          </thead>
          <tbody>
            <% sets.forEach(set => { %>
            <tr>
              <td>
                <img
                  src="<%= set.img_url %>"
                  alt="<%= set.name %>"
                  class="w-16 h-16 object-cover rounded-full"
                />
              </td>
              <td><%= set.name %></td>
              <td>
                <a
                  href="/lego/sets?theme=<%= set.Theme.name %>"
                  class="btn btn-primary"
                  ><%= set.Theme.name %></a
                >
              </td>
              <td><%= set.year %></td>
              <td><%= set.num_parts %></td>
              <td>
                <a
                  href="/lego/sets/<%= set.set_num %>"
                  class="btn btn-secondary"
                  >Details</a
                >
              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </section>
    </main>
  </body>
</html>
